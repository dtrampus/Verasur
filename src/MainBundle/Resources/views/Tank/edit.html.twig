{% extends 'base.html.twig' %}

{% trans_default_domain 'FOSUserBundle' %}

{% block content %}
    <div class="row">
        <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
            <h1 class="page-title txt-color-blueDark"><i class="fa fa-desktop fa-fw "></i> Gestión de Tanques <span>&gt; Editar Tanque </span></h1>
        </div>
    </div>

    <div class="row">
        <article class="col-sm-12 col-md-12 col-lg-12">
            <!-- Widget ID (each widget will need unique ID)-->
            <div class="jarviswidget" id="wid-id-0" data-widget-colorbutton="false" data-widget-editbutton="false">
                <!-- widget options:
                usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">

                data-widget-colorbutton="false"
                data-widget-editbutton="false"
                data-widget-togglebutton="false"
                data-widget-deletebutton="false"
                data-widget-fullscreenbutton="false"
                data-widget-custombutton="false"
                data-widget-collapsed="true"
                data-widget-sortable="false"

                -->
                <header>
                    <span class="widget-icon"> <i class="fa fa-database"></i> </span>
                    <h2>Formulario de edición de Tanque</h2>
                </header>

                <!-- widget div-->
                <div>
                    <!-- widget edit box -->
                    <div class="jarviswidget-editbox">
                        <!-- This area used as dropdown edit box -->
                    </div>
                    <!-- end widget edit box -->

                    <!-- widget content -->
                    <div class="widget-body">
                        {{ form_start(edit_form, { 'attr': {'id': 'tank-form'} }) }}
                        {{ form_errors(edit_form) }}
                        {{form_row(edit_form.plant)}}
                        {{form_row(edit_form.code)}}
                        {{form_row(edit_form.description)}}
                        {{form_row(edit_form.vertical)}}
                        {{form_row(edit_form.circumference)}}
                        {{form_row(edit_form.reference)}}
                        {{form_row(edit_form.coordinates)}}
                        {{form_row(edit_form.diameter)}}
                        {{form_row(edit_form.liter)}}
                        {{form_row(edit_form.totalCapacity)}}
                        {{form_row(edit_form.products)}}
                        <div class="form-group">                
                            <label class="control-label required" for="mainbundle_tank_status">Estado</label>
                            <select id="mainbundle_tank_status" name="status" required="required" class="select2 form-control" style="width:100%">
                                {% if entity.status == "N/A" %}
                                <option value="{{ entity.status }}" selected="selected">{{ entity.status }}</option>
                                <option value='Liberado'>Liberado</option>
                                <option value='Rechazado'>Rechazado</option>
                                {% endif %}
                                {% if entity.status == "Liberado" %}
                                <option value="{{ entity.status }}" selected="selected">{{ entity.status }}</option>
                                <option value='N/A'>N/A</option>
                                <option value='Rechazado'>Rechazado</option>
                                {% endif %}
                                {% if entity.status == "Rechazado" %}
                                <option value="{{ entity.status }}" selected="selected">{{ entity.status }}</option>
                                <option value='N/A'>N/A</option>
                                <option value='Liberado'>Liberado</option>
                                {% endif %}
                            </select>
                            <span id='cantidad1'></span>
                        </div>
                        <div class="form-group" id="textarea">
                            <label class="control-label" for="mainbundle_tank_reason">Motivo</label>
                            <textarea id="mainbundle_tank_reason" name="reason" class="form-control">{{ entity.reason }}</textarea>
                        </div>
                        {{ form_end(edit_form) }}
                    </div>
                    <!-- end widget content -->

                </div>
                <!-- end widget div -->

            </div>
            <!-- end widget -->
        </article>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts 'SmartAdmin/js/plugin/jquery-validate/jquery.validate.min.js'
                   '@MainBundle/Resources/public/js/verasur_new_edit_tank.js'
    %}
    <script src="{{ asset_url }}" type="text/javascript"></script>
    {% endjavascripts %}


    <script type="text/javascript">
        // START AND FINISH DATE
        $(document).ready(function () {
            verasurNewEditTank.init();

        });
    </script>
{% endblock %}
