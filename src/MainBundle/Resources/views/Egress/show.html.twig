{% extends '::base.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
            <h1 class="page-title txt-color-blueDark"><i class="fa fa-desktop fa-fw "></i> Gestión de Egresos <span>&gt; Mostrar Egreso </span></h1>
        </div>
    </div>

    <div class="row">
        <article class="col-sm-12 col-md-12 col-lg-12">
            {% for flashMessage in app.session.flashbag.get('success') %}
                <div class="alert alert-success fade in">
                    <button class="close" data-dismiss="alert">×</button>
                    <i class="fa-fw fa fa-check"></i>
                    <strong>Éxito:</strong> {{ flashMessage }}
                </div>
            {% endfor %}
            
            <div class="jarviswidget" id="wid-id-8" data-widget-colorbutton="false" data-widget-editbutton="false" data-widget-togglebutton="false" data-widget-deletebutton="false" data-widget-fullscreenbutton="false" data-widget-custombutton="false" data-widget-sortable="false">
                <!-- widget options:
                usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">

                data-widget-colorbutton="false"
                data-widget-editbutton="false"
                data-widget-togglebutton="false"
                data-widget-deletebutton="false"
                data-widget-fullscreenbutton="false"
                data-widget-custombutton="false"
                data-widget-collapsed="true"
                data-widget-sortable="false"

                -->
                <header>
                    <h2>Egreso</h2>
                    <ul class="nav nav-tabs pull-right in">

                        <li class="active">
                            <a data-toggle="tab" href="#hb1"> <i class="fa fa-lg fa-align-left"></i> <span class="hidden-mobile hidden-tablet"> Información Básica </span> </a>
                        </li>
                        <li>
                            <a data-toggle="tab" href="#hb2"> <i class="fa fa-lg fa-male"></i> <span class="hidden-mobile hidden-tablet"> Cliente </span> </a>
                        </li>
                        <li>
                            <a data-toggle="tab" href="#hb3"> <i class="fa fa-lg fa-truck"></i> <span class="hidden-mobile hidden-tablet"> Transporte </span> </a>
                        </li>
                        <li>
                            <a data-toggle="tab" href="#hb4"> <i class="fa fa-lg fa-cubes"></i> <span class="hidden-mobile hidden-tablet"> Producto </span> </a>
                        </li>
                        <li>
                            <a data-toggle="tab" href="#hb5"> <i class="fa fa-lg fa-truck"></i> <span class="hidden-mobile hidden-tablet"> Tanques asociados </span> </a>
                        </li>
                    </ul>
                </header>

                <!-- widget div-->
                <div>

                    <!-- widget edit box -->
                    <div class="jarviswidget-editbox">
                        <!-- This area used as dropdown edit box -->

                    </div>
                    <!-- end widget edit box -->

                    <!-- widget content -->
                    <div class="widget-body">
                        <div class="tab-content">
                            <div class="tab-pane active" id="hb1">    
                                <p>BALN: {{ entity.baln }}</p>
                                <p>Fecha y Hora: {{ entity.date|date("d/m/Y h:m") }}</p
                                <p>Dominio Camion: {{ entity.truckDomain }}</p>
                                <p>Dominio Acoplado: {{ entity.coupledDomain }}</p>
                                <p>Chofer: {{ entity.driver }}</p>
                                <p>Peso Bruto: {{ entity.grossWeight }}</p>
                                <p>Peso Tara: {{ entity.tareWeight }}</p>
                                <p>Densidad: {{ entity.density }}</p>
                                <p>Densidad analizada: {{ entity.tested?'si':'no' }}</p>
                                <p>Neto: {{ entity.clean }}</p>
                                <p>Litros Reales: {{ entity.realLiter }}</p>
                                <p>Número: {{ entity.branchNumber }} - {{ entity.remitNumber }}</p>
                                <p>Observación: {{ entity.observation }}</p>
                                <p>Destilación la gota: {{ entity.distillationGout }}</p>
                                <p>5%: {{ entity.fivePercent }}</p>
                                <p>10%: {{ entity.tenPercent }}</p>
                                <p>20%: {{ entity.twentyPercent }}</p>
                                <p>30%: {{ entity.thirtyPercent }}</p>
                                <p>40%: {{ entity.fortyPercent }}</p>
                                <p>50%: {{ entity.fiftyPercent }}</p>
                                <p>60%: {{ entity.sixtyPercent }}</p>
                                <p>70%: {{ entity.seventyPercent }}</p>
                                <p>80%: {{ entity.eightyPercent }}</p>
                                <p>90%: {{ entity.ninetyPercent }}</p>
                                <p>95%: {{ entity.ninetyFivePercent }}</p>
                                <p>P. Seco: {{ entity.pDry }}</p>
                                <p>P. Final: {{ entity.pFinal }}</p>
                                <p>Recuperado: {{ entity.recovered }}</p>
                                
                                <p>Usuario Asociado: {{ entity.user.username }}</p>
                            </div>
                            <div class="tab-pane" id="hb2">
                                <ul class="list-group">
                                    <p>Código: {{ entity.client.code }}</p>
                                    <p>Razon Social: {{ entity.client.nombre }}</p>
                                </ul>
                            </div>
                            <div class="tab-pane" id="hb3">
                                <ul class="list-group">
                                    <p>Código: {{ entity.transport.code }}</p>
                                    <p>Transporte: {{ entity.transport.transport }}</p>
                                </ul>
                            </div>
                            <div class="tab-pane" id="hb4">
                                <ul class="list-group">
                                    <p>Código: {{ entity.product.code }}</p>
                                    <p>Descripcion: {{ entity.product.description }}</p>
                                </ul>
                            </div>
                            <div class="tab-pane" id="hb5">
                                <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                    <!-- Widget ID (each widget will need unique ID)-->
                                    <div class="jarviswidget jarviswidget-color-blueDark" id="wid-id-0" data-widget-editbutton="false">
                                        <header>
                                            <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                                            <h2>Tanques asociados</h2>
                                        </header>
                                        <!-- widget div-->
                                        <div>
                                            <!-- widget edit box -->
                                            <div class="jarviswidget-editbox">
                                                    <!-- This area used as dropdown edit box -->

                                            </div>
                                            <!-- end widget edit box -->

                                            <!-- widget content -->
                                            <div class="widget-body">
                                                <div class="table-responsive">

                                                    <table class="table table-bordered">
                                                        <thead>
                                                            <tr>
                                                                <th>Tanque</th>
                                                                <th>Cantidad</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            {% for movementDetail in entity.getMovementDetails() %}
                                                                <tr>
                                                                    <td>{{ movementDetail.tank.code }}-{{ movementDetail.tank.description }}</td>
                                                                    <td>{{ movementDetail.quantity }}</td>
                                                                </tr>
                                                            {% endfor %}
                                                        </tbody>
                                                    </table>

                                                </div>
                                            </div>
                                            <!-- end widget content -->
                                        </div>
                                        <!-- end widget div -->
                                    </div>
                                    <!-- end widget -->
                                </article>
                            </div>
                        </div>

                        <hr class="simple">

                        <a href="{{ path('egress') }}" class="btn btn-default">Volver</a>
                        <a href="{{ path('egress_edit', { 'id': entity.id }) }}" class="btn btn-primary pull-right">Editar</a>
                        <button class="btn btn-danger pull-right margin-right-5" data-toggle="modal" data-target="#deleteModal">Eliminar</button>

                    </div>
                    <!-- end widget content -->

                </div>
                <!-- end widget div -->
            </div>
        </article>
    </div>
                        
    {{ form_start(delete_form) }}
        <!-- Modal -->
        <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                            &times;
                        </button>
                        <h4 class="modal-title" id="myModalLabel">Confirmación de eliminación</h4>
                    </div>
                    <div class="modal-body">
                        <p>Está seguro que desea eliminar el registro?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">
                            Cancelar
                        </button>
                        <input class="btn btn-danger pull-right" type="submit" value="Eliminar" />
                    </div>
                </div><!-- /.modal-content -->
            </div><!-- /.modal-dialog -->
        </div><!-- /.modal -->
    {{ form_end(delete_form) }}
    
{% endblock %}
